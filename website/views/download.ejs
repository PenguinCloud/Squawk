                        <div class="code-example bg-dark text-light rounded p-3 mb-3">
<pre><code>version: '3.8'
services:
  dns-server:
    image: penguincloud/squawk-dns-server:latest
    ports:
      - "8080:8080"
      - "8000:8000"
    environment:
      - ENABLE_MTLS=true
      - USE_NEW_AUTH=true
      - ENABLE_BLACKLIST=true
    volumes:
      - ./certs:/app/certs
      - ./data:/app/data
    
  dns-client:
    image: penguincloud/squawk-dns-client:latest
    ports:
      - "53:53/udp"
      - "53:53/tcp"
    environment:
      - SQUAWK_SERVER_URL=https://dns-server:8080
      - SQUAWK_AUTH_TOKEN=your-secure-token
    depends_on:
      - dns-server</code></pre>
